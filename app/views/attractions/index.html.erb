<% @attractions.each do |ride| %>

  <%= ride.name %> ||
  
  <% if current_user.admin? %>
  <%= link_to "Show #{ride.name}", attraction_path(ride) %>
  <% else %>
  || <%= link_to "Go on #{ride.name}", attraction_path(ride) %><br>
  <% end %>
  <br></br>
<% end %>

<% if current_user.admin? %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>